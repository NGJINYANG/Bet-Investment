  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gambling and Investment Page</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f9;
      text-align: center;
    }
    header {
      background-color: #4CAF50;
      color: white;
      padding: 10px 0;
    }
    .container {
      padding: 20px;
    }
    .button {
      display: inline-block;
      margin: 10px;
      padding: 15px 30px;
      font-size: 18px;
      color: white;
      background-color: #007BFF;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    .button:hover {
      background-color: #0056b3;
    }
    .result {
      margin: 20px 0;
      font-size: 20px;
      font-weight: bold;
    }
    .hidden {
      display: none;
    }
  </style>
</head>
<body>
  <header>
    <h1>Gambling and Investment Page</h1>
  </header>

  <div id="home" class="container">
    <h2>Choose Your Path</h2>
    <button class="button" onclick="showPage('gamble')">Gambling</button>
    <button class="button" onclick="showPage('invest')">Investment</button>
  </div>

  <div id="gamble" class="container hidden">
    <h2>Gambling</h2>
    <p>Initial Amount: <span id="gamble-amount">200</span> MYR</p>
    <button class="button" onclick="playGamble()">Try Your Luck</button>
    <p class="result" id="gamble-result"></p>
    <button class="button" onclick="goHome()">Back to Home</button>
  </div>

  <div id="invest" class="container hidden">
    <h2>Investment</h2>
    <p>Initial Amount: <span id="invest-amount">200</span> MYR</p>
    <button class="button" onclick="playInvest()">Invest Now</button>
    <p class="result" id="invest-result"></p>
    <button class="button" onclick="goHome()">Back to Home</button>
  </div>

  <script>
    let gambleAmount = 200;
    let investAmount = 200;

    function showPage(page) {
      document.getElementById('home').classList.add('hidden');
      document.getElementById('gamble').classList.add('hidden');
      document.getElementById('invest').classList.add('hidden');
      document.getElementById(page).classList.remove('hidden');
    }

    function goHome() {
      document.getElementById('home').classList.remove('hidden');
      document.getElementById('gamble').classList.add('hidden');
      document.getElementById('invest').classList.add('hidden');
    }

    function playGamble() {
      const rand = Math.random() * 100;
      let resultText = '';

      if (rand < 5) {
        gambleAmount = 0;
        resultText = 'Bad luck! You lost everything!';
      } else if (rand < 10) {
        gambleAmount *= 2;
        resultText = 'Lucky! Your amount doubled!';
      } else if (rand < 30) {
        gambleAmount += 500;
        resultText = 'Amazing! You won 500 MYR!';
      } else if (rand < 70) {
        gambleAmount += 100;
        resultText = 'Good! You won 100 MYR!';
      } else {
        gambleAmount += 200;
        resultText = 'Great! You won 200 MYR!';
      }

      document.getElementById('gamble-amount').textContent = gambleAmount;
      document.getElementById('gamble-result').textContent = resultText;
    }

    function playInvest() {
      const rand = Math.random() * 100;
      let resultText = '';

      if (rand < 70) {
        investAmount += 100;
        resultText = 'Good investment! You earned 100 MYR!';
      } else if (rand < 80) {
        investAmount += 200;
        resultText = 'Great choice! You earned 200 MYR!';
      } else {
        investAmount -= 30;
        resultText = 'Bad luck! You lost 30 MYR!';
      }

      document.getElementById('invest-amount').textContent = investAmount;
      document.getElementById('invest-result').textContent = resultText;
    }
  </script>
</body>
</html>
